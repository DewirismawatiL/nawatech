@model technicalTes_Nawatech.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div class="card" style="width: 18rem;">
    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <img src="~/uploads/@Model.Image" class="card-img-top" alt="Product Image">
    }
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
        <p class="card-text"><strong>Price:</strong> Rp @Model.Price</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
    </div>
</div>
